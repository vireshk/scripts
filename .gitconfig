[user]
	name = Viresh Kumar
	email = viresh.kumar@linaro.org
[sendemail]
	smtpserver = /usr/bin/msmtp
        smtpserverport = 25
        smtpuser = viresh.kumar
#	smtpencryption = tls
	multiedit = false
#	smtppass = ""
	aliasesfile = /home/vireshk/scripts/.git_aliases
	aliasfiletype = mutt

# Moved to kernel-specific git config only.
#	tocmd = ~/scripts/tocmd
#	cccmd = ~/scripts/cccmd
[color]
	diff = auto
	status = auto
	branch = auto
[core]
	editor = "vim -c 'setlocal spell'"
	gitproxy = none for "arm.com"
	abbrev = 12
#	gitproxy = ~/gitproxy.sh
#	gitproxy = gitproxy-socat
[receive]
	autogc = false
[diff "default"]
        xfuncname = "^[[:alpha:]$_].*[^:]$"
[pretty]
	fixes = Fixes: %h (\"%s\")
	onelin = commit %h (\"%s\")
[push]
	default = simple
[http]
	cookiefile = /home/vireshk/.gitcookies
[alias]
	ps1=!test -d .git && echo -n : && git branch --show-current
